    procedure destroydos;
    procedure Doska;
    procedure figures;
    procedure reshenie;
    procedure cliCkfig;
    procedure ComboBox1Change(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure perehod;
    procedure ComboBox2Change(Sender: TObject);
    procedure zadach;
    procedure xglobxxx;
  private
    { Private declarations }
  public
    { Public declarations }

  end;
  Tshdos=class(Tpanel)
    private
    Dx,Dy:integer;
    Ffigure:byte;
    public
    procedure Click;override;
    property px:integer read Dx write Dx;
    property py:integer read Dy write Dy;
    property figure:byte read Ffigure write Ffigure;
  end;
  Tfigures=class(TImage)
  private
    Fx,Fy:integer;
    Fkill:boolean;
    Fcolor:byte;
    Ftypefig:string;
    public
    procedure Click;override;
    property px:integer read Fx write Fx;
    property py:integer read Fy write Fy;
    property color:byte read Fcolor write Fcolor;
    property typefig:string read Ftypefig write Ftypefig;
  end;

  const
  //расположение доски
  Dostop=-15;
  Dosleft=25;
  //кол-во клеток по ширине и длине
  kolklsh=8;
  kolkldl=8;
  //ширина клеток
  widthkl=50;
  //длина клеток
  heightkl=55;
  //количество фигур
  kolfigur=32;

var
  Form1: TForm1;
  fig:array [1..8,1..8] of tfigures;
  dos:array[1..kolklsh,1..kolkldl] of Tshdos;
  razm:array[1..kolkldl] of Tlabel;
  masfig:Tfigures;
  figurwhite:array[1..kolfigur] of string;
  figurblack:array[1..kolfigur] of string;
  pxnac,pynac,pxcon,pycon,shetch,xxx:integer;
  clicked:tshdos;
  figura1,figura:tfigures;
  hod,zadacha,fam,noz:string;
  masreshen:array[1..100] of integer;
  vspmasreshen:array[1..100] of boolean;
  zap:array[1..100] of integer;
  l200,l,flag:boolean;
  index:integer;
  xglob:integer;
implementation

                      { R - ладья
                        B - слон
                        N - конь
                        K - король
                        Q - ферзь
                        P - пешка}
{$R *.dfm}

{ Tshdos }

procedure Tshdos.Click;
procedure clk;
begin
  if form1.ListBox1.Items[xxx-1]<>'' then begin
  inherited;
  if clicked<>nil then
  begin
  clicked:=tshdos(Self);
  form1.clickfig;
  end;
  {figura1.Parent:=clicked;}

  {figura1.px:=clicked.px;
  figura1.py:=clicked.py;}
   { form1.Caption:=inttostr(clicked.dx)+','+inttostr(clicked.py);}
   end else showmessage('Покажите работу преподователю');
   end;
procedure sravn;
var cnx,ckx,cny,cky,x:integer;
    fi:char;
begin
  if clicked<>nil then
  begin
  fi:=hod[1];
  cnx:=ord(hod[2])-96;
  cny:=strtoint(hod[3]);
  ckx:=ord(hod[5])-96;
  cky:=strtoint(hod[6]);
  l:=false;
  {if (fi=figura.typefig) and (cnx=pxnac) and (cny=pynac) and (ckx=pxcon) and (cky=pycon) then l:=true;}
  if  (cnx=pxnac) and (cny=pynac) and (ckx=pxcon) and (cky=pycon) then l:=true;

// form1.Caption:=inttostr(pynac);
   end;
  //form1.Caption:=inttostr(pynac);
end;
procedure uvel;
var x:integer;
    c:char;
begin
  c:=zadacha[1];
  x:=strtoint(c);
  x:=x+1;
  zadacha:=inttostr(x)+')';
end;
begin    {основная программа процедуры}
if flag then
begin
if form1.ListBox1.Items[xxx-1]<>'' then begin
clk;
sravn;
if l then begin
showmessage('Ход сделан правильно');
  shetch:=shetch+1;
form1.reshenie;
  form1.perehod;
end
else begin
showmessage('Ход сделан неправильно');
  form1.destroydos;
  form1.Doska;
  form1.figures;
  shetch:=shetch+1;
form1.reshenie;
end;
if masreshen[xxx]=2 then form1.perehod;
end else showmessage('Покажите работу преподователю');
form1.xglobxxx;
flag:=false;
end
else
begin


  clicked:=tshdos(Self);
    pxnac:=clicked.px;
  pynac:=clicked.py;
  figura1:=fig[pxnac,pynac];
  figura:=figura1;
  if figura1<>nil then
  flag:=true;
  end;
end;
procedure Tfigures.Click;
begin
  if form1.ListBox1.Items[xxx-1]<>'' then begin
  inherited;
  figura1:=tfigures(self);
  figura:=figura1;
 clicked:=dos[figura1.px,figura1.py];
  pxnac:=px;
  pynac:=py;
  end else showmessage('Покажите работу преподователю');
  flag:=true;
  //form1.Caption:=inttostr(clicked.px)+','+inttostr(figura1.py);
end;


procedure TForm1.cliCkfig;
begin
if form1.ListBox1.Items[xxx-1]<>'' then begin
 figura1.Parent:=clicked;
  pxcon:=clicked.px;
  pycon:=clicked.py;
end else showmessage('Покажите работу преподователю');
end;

procedure TForm1.ComboBox1Change(Sender: TObject);
begin
  xxx:=combobox1.ItemIndex+1;
  zadacha:=inttostr(xxx)+')';
  l200:=true;
  shetch:=zap[xxx];
  form1.destroydos;
  form1.Doska;
  form1.figures;
end;
procedure TForm1.ComboBox2Change(Sender: TObject);
var i,l7:integer;
begin
combobox1.Clear;
noz:=noz+'.zad';
listbox1.Items.SaveToFile(noz);
listbox1.Clear;
    xxx:=1;
    index:=0;
    shetch:=0;
    l:=false;
    zadacha:='1)';
    for i := 1 to 100 do begin
    masreshen[i]:=0;
    zap[i]:=0;
    vspmasreshen[i]:=false;
    end;
form1.destroydos;
form1.Doska;
form1.figures;
form1.zadach;
noz:=combobox2.Text;
end;

procedure TForm1.destroydos;
var i,j:integer;
begin
for i := 1 to 8 do
  for j := 1 to 8 do
    dos[i,j].Destroy;
end;

procedure TForm1.Doska;
var i,j,x1,y1,z,m:integer;
begin
//прорисовка доски
   x1:=Dosleft;
   y1:=Dostop;
   z:=1;
   for j := kolklsh downto 1 do begin
   if (j mod 2)=0 then z:=2 else z:=1;
   x1:=Dosleft;
   y1:=y1+heightkl;
      for i := 1 to kolkldl do begin
       dos[j,i]:=Tshdos.Create(self);
       with dos[j,i] do begin
          parent:=form1;
          Width:=widthkl;
          Height:=heightkl;
          Top:=y1;
          Left:=x1;
          x1:=x1+widthkl;
          //visible:=false;
          px:=i;
          py:=j;
          if (z mod 2)=0 then Color:=clwhite else Color:=clblack;
       end;
       z:=z+1;
     end;
     end;
       m:=97;
       x1:=dosleft;
     y1:=dostop;
       for i := 1 to kolkldl do begin
          razm[i]:=Tlabel.Create(self);
          with razm[i] do begin
            parent:=form1;
            width:=dosleft;
            height:=dostop;
            top:=dostop+20;
            left:=dosleft;
            Top:=y1+(heightkl*9);
            Left:=x1+(widthkl div 2);
            Font.Size:=15;
            Caption:=chr(m);
            m:=m+1;
            x1:=x1+widthkl;
          end;
       end;
       y1:=dostop+(kolklsh*heightkl)+(heightkl div 2);
       x1:=dosleft;
       x1:=dosleft;
       y1:=dostop;
          m:=8;
          for i := 1 to kolkldl do begin
            razm[i]:=Tlabel.Create(self);
            with razm[i] do begin
              parent:=form1;
             // Width:=15;
              //Height:=15;
              Top:=y1+((heightkl*5)div 4);
              Left:=dosleft-(widthkl div 3);
              Font.Size:=15;
              Caption:=inttostr(m);
              m:=m-1;
            end;
       y1:=y1+heightkl;
       end;
       end;

procedure TForm1.faily;
var x,r:integer;
ss:string;
d:tsearchrec;
begin
  x:=findfirst('*.txt',faanyfile,d);
  while x=0 do begin
    ss:=d.Name;
    r:=length(ss);
    delete(ss,r-3,4);
    combobox2.Items.Add(ss);
    x:=findnext(d);
  end;
end;
//выставление фигур
procedure TForm1.figures;
  procedure vyv(cl,t:char;px,py:integer);
  var x,i,j:integer;
  begin
    masfig:=tfigures.Create(self);
    if (cl='w') and (t='R') then masfig.Picture.LoadFromFile('Ладья белая.bmp');
    if (cl='w') and (t='B') then masfig.Picture.LoadFromFile('Слон белый.bmp');
    if (cl='w') and (t='N') then masfig.Picture.LoadFromFile('Конь белый.bmp');
    if (cl='w') and (t='K') then masfig.Picture.LoadFromFile('Король белый.bmp');
    if (cl='w') and (t='Q') then masfig.Picture.LoadFromFile('Ферзь белый.bmp');
    if (cl='w') and (t='P') then masfig.Picture.LoadFromFile('Пешка белая.bmp');
    if (cl='b') and (t='P') then masfig.Picture.LoadFromFile('Пешка чёрная.bmp');
    if (cl='b') and (t='R') then masfig.Picture.LoadFromFile('Ладья чёрная.bmp');
    if (cl='b') and (t='B') then masfig.Picture.LoadFromFile('Слон чёрный.bmp');
    if (cl='b') and (t='N') then masfig.Picture.LoadFromFile('Конь чёрный.bmp');
    if (cl='b') and (t='K') then masfig.Picture.LoadFromFile('Король чёрный.bmp');
    if (cl='b') and (t='Q') then masfig.Picture.LoadFromFile('Ферзь чёрный.bmp');
    masfig.typefig:=t;
    masfig.Parent:=dos[py,px];
    masfig.Left:=masfig.Left+(widthkl div 4);
    masfig.Width:=widthkl div 2;
    masfig.Height:=heightkl-(heightkl div 13);
    masfig.Top:=masfig.Top+(heightkl div 20);
    masfig.Transparent:=true;
    masfig.px:=px;
    masfig.py:=py;
    masfig.Transparent:=true;
    masfig.Stretch:=true;
    fig[px,py]:=masfig;
    end;
  procedure chit;
    var i,j,x,k1,k2:integer;
    f:textfile;
    cv,vs,ccc,hit,s1:string;
    figura:string;
    c,c1,zn:char;
    begin
        assignfile(f,combobox2.Text+'.txt');
        reset(f);
        repeat
            readln(f,ccc);
        until zadacha=ccc;
        readln(f,hit);
        label3.Caption:=hit+' ';
        readln(f,hit);
        label4.Caption:=hit+' ';
        readln(f,cv);
        x:=pos(':',cv);
        delete(cv,1,x);
        while cv<>'' do begin
          x:=pos(',',cv);
          if x=0 then x:=pos('.',cv);
          s1:=copy(cv,1,x-1);
          c:=s1[1];
          k1:=ord(s1[2])-96;
          k2:=strtoint(s1[3]);
          vyv('w',c,k1,k2);
          delete(cv,1,x);
        end;
        readln(f,cv);
        x:=pos(':',cv);
        delete(cv,1,x);
        while cv<>'' do begin
          x:=pos(',',cv);
          if x=0 then x:=pos('.',cv);
          s1:=copy(cv,1,x-1);
          c:=s1[1];
          k1:=ord(s1[2])-96;
          k2:=strtoint(s1[3]);
          vyv('b',c,k1,k2);
          delete(cv,1,x);
        end;
    readln(f,hod);
    closefile(f);
    end;
begin
    {vyv('w','P',1,1);
    vyv('w','R',2,2);
    vyv('w','B',5,7);
    vyv('w','N',4,8);
    vyv('w','K',1,3);
    vyv('w','Q',1,7);
    vyv('w','P',6,8);
    vyv('w','P',4,7);
    vyv('b','P',5,8);
    vyv('b','R',2,9);
    vyv('b','B',5,2);
    vyv('b','N',7,4);
    vyv('b','K',3,8);
    vyv('b','Q',8,3);
    vyv('b','P',7,5);
    vyv('b','P',3,2);}
    chit;
end;
//вызов процедур, при запуске формы
procedure TForm1.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  noz:=noz+'.zad';
  listbox1.Items.SaveToFile(noz);
end;

procedure TForm1.FormCreate(Sender: TObject);
var j,i:integer;
begin
flag:=false;
   zadacha:='1)';
   l200:=false;
   //fam:=inputbox('Фамилия','Введите фамилию и имя','');
//listbox1.Items.Add(fam);
shetch:=0;
   noz:=combobox2.Text;
   for i := 1 to 100 do begin
   vspmasreshen[i]:=false;
   zap[i]:=0;
   end;
xxx:=1;
   Doska;
   figures;
   zadach;
   form1.faily;
end;

procedure TForm1.perehod;
var ss:string;
    x:integer;
begin
if (vspmasreshen[xxx]=false) and (masreshen[xxx]=2) then begin
    if hod[1]='P' then listbox1.Items[xxx-1]:=listbox1.Items[xxx-1]+'не решена: Пешка '+hod[2]+hod[3]+hod[4]+hod[5]+hod[6];
    if hod[1]='Q' then listbox1.Items[xxx-1]:=listbox1.Items[xxx-1]+'не решена: Ферзь '+hod[2]+hod[3]+hod[4]+hod[5]+hod[6];
    if hod[1]='K' then listbox1.Items[xxx-1]:=listbox1.Items[xxx-1]+'не решена: Король '+hod[2]+hod[3]+hod[4]+hod[5]+hod[6];
    if hod[1]='B' then listbox1.Items[xxx-1]:=listbox1.Items[xxx-1]+'не решена: Слон '+hod[2]+hod[3]+hod[4]+hod[5]+hod[6];
    if hod[1]='R' then listbox1.Items[xxx-1]:=listbox1.Items[xxx-1]+'не решена: Ладья '+hod[2]+hod[3]+hod[4]+hod[5]+hod[6];
    if hod[1]='N' then listbox1.Items[xxx-1]:=listbox1.Items[xxx-1]+'не решена: Конь '+hod[2]+hod[3]+hod[4]+hod[5]+hod[6];
end;
if vspmasreshen[xxx] then begin
if masreshen[xxx]>0 then begin
  ss:='решена с '+inttostr(masreshen[xxx])+'-й попытки';
  listbox1.Items[xxx-1]:=listbox1.Items[xxx-1]+ss;
end;
end;
index:=index+1;
xxx:=index+1;
if combobox1.Items[index]<>'' then begin
combobox1.Enabled:=true;
combobox1.Text:=combobox1.Items[index];
combobox1.Enabled:=false;
  x:=strtoint(zadacha[1]);
  x:=x+1;
  zadacha:=inttostr(x)+')';
  l200:=true;
  shetch:=zap[xxx];
  form1.destroydos;
  form1.Doska;
  form1.figures;
end;
end;

procedure TForm1.reshenie;
begin
     masreshen[xxx]:=masreshen[xxx]+1;
     if l then vspmasreshen[xxx]:=true;
     zap[xxx]:=shetch;
end;

procedure TForm1.xglobxxx;
var r:tmodalresult;
    i:integer;
begin
    if xglob=xxx-1 then begin
      r:=messagedlg('Хотите решить задания заново?',mtconfirmation,[mbyes,mbno],0);
      if r=mryes then begin
        combobox1.Clear;
        zadacha:='1)';
        listbox1.Clear;
        Doska;
        figures;
        zadach;
        form1.faily;
      end;
      if r=mrno then begin
        combobox1.Clear;
        noz:=noz+'.zad';
        listbox1.Items.SaveToFile(noz);
        listbox1.Clear;
        xxx:=1;
        index:=0;
        shetch:=0;
        l:=false;
        zadacha:='1)';
        for i := 1 to 100 do begin
          masreshen[i]:=0;
          zap[i]:=0;
          vspmasreshen[i]:=false;
        end;
        form1.destroydos;
        form1.Doska;
        form1.figures;
        form1.zadach;
        noz:=combobox2.Text;
      end;
    end;
end;

procedure TForm1.zadach;
var x,i:integer;
    f:textfile;
    s300:string;
    l:boolean;
begin
    assignfile(f,combobox2.Text+'.txt');
    reset(f);
    x:=0;
    s300:=' ';
    l:=true;
    while l do begin
      readln(f,s300);
      if s300='' then l:=false;
      if l then if s300[2]=')' then x:=strtoint(s300[1]);
    end;
   closefile(f);
   for i:=0 to x-1 do combobox1.Items.Add('Задача '+inttostr(i+1));
   combobox1.Text:=combobox1.Items[0];
   //form1.Caption:=inttostr(x);
   for i := 1 to 100 do masreshen[i]:=0;
    for i:=0 to x-1 do listbox1.Items.Add(combobox1.Items[i]+': ');
    xglob:=x;
end;

end.
